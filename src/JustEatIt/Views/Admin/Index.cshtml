@model AdminViewModel

@{
    ViewData["Title"] = "Adminstrator Control";
}

<div class="row">
    <div class="col-sm-12 my-3">
        <h1>@ViewData["Title"]</h1>
        <a class="btn btn-primary mr-3" asp-controller="AdminUser" asp-action="Index">User Control</a>
        <a class="btn btn-primary mr-3" asp-controller="AdminDish" asp-action="IndexDish">Dishes</a>
        <a class="btn btn-primary mr-3" asp-controller="AdminOrder" asp-action="Index">Orders</a>
    </div>
</div>


<form asp-controller="Admin">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email">User e-mail:</label>
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role">User Role:</label>
        <select asp-for="Role" type="text" class="form-control">
            <option value="" selected>Choose an option</option>
            <option value="Administrator">Administrator</option>
            <option value="Partner">Partner</option>
            <option value="Customer">Customer</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" asp-action="AddRole">Add Role</button>
    <button type="submit" class="btn btn-primary" asp-action="RemoveRole">Remove Role</button>
</form>
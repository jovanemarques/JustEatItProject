
@{
    ViewData["Title"] = "Add New Dish";
}

<h1>Add New Dish</h1>

<form asp-controller="Dish" asp-action="Create">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" placeholder="example: name@service.ca">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input type="text" class="form-control" id="description">
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="text" class="form-control" id="price">
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="text" class="form-control" id="quantity">
    </div>
    <div class="form-group">
        <label for="bestBefore">BestBefore</label>
        <input type="date" class="form-control" id="bestBefore">
    </div>
    <div class="form-group">
        <label for="type">Type</label>
        <select class="form-control" id="type">
            <option>Pizza</option>
            <option>Sushi</option>
            <option>Salad</option>
            <option>Pasta</option>
        </select>
    </div>
    <div class="form-group">
        <label for="restaurant">Restaurant</label>
        <select class="form-control" id="restaurant">
            <option>Italian</option>
            <option>Brazillian</option>
            <option>Ukranian</option>
            <option>Indian</option>
            <option>Franch</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
</form>

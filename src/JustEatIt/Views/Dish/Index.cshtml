@model IEnumerable<Dish>
@{
    ViewData["Title"] = "Dishes";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Dishes</h1>
        </div>
        <div class="col">
            <form method="get" asp-controller="Dish" asp-action="Create">
                <button type="submit" class="btn btn-success">Add New</button>
            </form>
        </div>
    </div>
<div class="card-deck">
    @foreach (Dish dish in Model)
    {
        <div class="card-body">
            <img src="@dish.Image" alt="@dish.Description" class="img-thumbnail" width="100" /> @dish.Description Best Before: @dish.BestBefore Qty: @dish.Quantity Price: @dish.Price
            <button class="btn btn-lg" style="background-color:transparent;">
                <a asp-controller="Dish" asp-action="Edit" ><i class="fa fa-edit"></i></a>
                <a asp-controller="Dish" asp-action="Delete"> <i class="fa fa-trash-alt"></i></a>
            </button>
        </div>
    }
</div>

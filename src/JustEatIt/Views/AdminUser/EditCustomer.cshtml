@model JustEatIt.Models.ViewModels.AdminCustomerViewModel

@{
    ViewData["Title"] = "Edit Customer";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditCustomer" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <input type="hidden" asp-for="Customer.Id" />
            <input type="hidden" asp-for="OldRole" />
            <partial name="CustomerFieldsPartial" for="Customer" />
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-searchText="@ViewData["currentFilter"]">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
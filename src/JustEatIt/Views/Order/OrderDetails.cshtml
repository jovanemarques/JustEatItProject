@model JustEatIt.Models.Order

@{
    ViewData["Title"] = "OrderDetails";
}
<style>
    #invoice-POS {
        box-shadow: 0 0 1in -0.25in rgba(0, 0, 0, 0.5);
        padding:2mm;
        margin: 0 auto;
        width: 65mm;
        background: #FFF;
    }
  
    ::selection {background: #f31544; color: #FFF;}

    h1{
        font-size: 3em;
        color: #222;
    }
    h2 {
        font-size: 1.5em;
    }
    h3{
        font-size: 2.4em;
        font-weight: 300;
        line-height: 2em;
    }
    p{
        font-size: 1em;
        color: #666;
        line-height: 1.2em;
    }
     
    #top, #mid,#bot{ /* Targets all id with 'col-' */
        border-bottom: 1px solid #EEE;
    }

    #top{min-height: 100px;}
    #mid{min-height: 80px;} 
    #bot{ min-height: 50px;}

    #top .logo{
        height: 100px;
        width: 100px;
        background: url(../images/home/jei_logo.png) no-repeat;
        background-size: 100px 100px;
    }
    .clientlogo{
        float: left;
        height: 60px;
        width: 60px;
        background: url(http://michaeltruong.ca/images/client.jpg) no-repeat;
        background-size: 60px 60px;
        border-radius: 50px;
    }
    .info{
        display: block;

        margin-left: 0;
    }
    .title{
        float: right;
    }
    .title p{text-align: right;} 
    table{
        width: 100%;
        border-collapse: collapse;
    }

    .tabletitle{
        font-size: .5em;
        background: #EEE;
    }
    .service{border-bottom: 1px solid #EEE;}
    .item{width: 24mm;}
    .itemtext{font-size: 1em;}

    #legalcopy{
        margin-top: 5mm;
    }

</style>

    <div>
        <div id="invoice-POS">

            <center id="top">
                <div class="logo"></div>
            </center>

            <div id="mid">
                <div class="info">
                    <h2>Contact Info</h2>
                    <p>
                        <b>Address </b>: @Model.Partner.Address<br />
                        <b>Email </b>: JohnDoe@jsuteatit.com<br />
                        <b>Phone </b>: 555-555-5555
                    </p>
                </div>
            </div>

            <div id="bot">

                <div id="table">
                    <table>
                        <tr class="tabletitle">
                            <td class="item"><h2>Item</h2></td>
                            <td class="Hours"><h2>Qty</h2></td>
                            <td class="Rate"><h2>Sub Total</h2></td>
                        </tr>
                        
                        @foreach (var item in @Model.Items)
                        {
                            <tr class="service">
                                <td class="tableitem">
                                    <p class="itemtext">@item.DishAvail.Dish.Name</p></td>
                                <td class="tableitem">
                                    <p class="itemtext">@item.Quantity</p></td>
                                <td class="tableitem">
                                    <p class="itemtext">$@item.DishAvail.DiscountPrice</p></td>
                            </tr>
                        }

                        <tr class="tabletitle">
                            <td></td>
                            <td class="Rate"><h2>Total</h2></td>
                            <td class="payment"><h2>@Model.GetTotal()</h2></td>
                        </tr>

                    </table>
                </div>

                <div id="legalcopy">
                    <p class="legal">
                        <strong>Thank you for your purchase!</strong> Please track your order online and be ready to pick it up at selected location. Thank you for saving money and environment.
                    </p>
                </div>
            </div>
        </div>
    </div>
<div>
    <a asp-action="Orders">Back to List</a>
</div>
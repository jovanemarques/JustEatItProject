@{
    ViewData["Title"] = "Partner Dashboard";
}

<h1 class="text-center">Dashboard for @DateTime.Now.ToString("MMM dd, yyyy")</h1>
<hr />
<h3 class="text-center">Dish availability</h3>
<div class="row">
    <div id="ordersChart" class="col-md-6"></div>
    <div class="col-md-6">
        <a class="my-lg-5 btn btn-success w-100" asp-controller="Dish" asp-action="IndexPartner">Dish list</a>
        <h3 class="my-lg-5">Dishes on menu: 2</h3>
        <h3 class="my-lg-5">Pending orders: 19</h3>
        <h3 class="my-lg-5">Finished orders: 25</h3>
    </div>
</div>
<div>
    <div class="col-md-6">

    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load("current", {packages:["corechart"]});
      google.charts.setOnLoadCallback(drawChart);
      function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['Dishes', 'Availability'],
          ['Available',     75],
          ['Sold',      25]
        ]);

        var options = {
            pieHole: 0.4,
            legend: 'none'
        };

        var chart = new google.visualization.PieChart(document.getElementById('ordersChart'));
        chart.draw(data, options);
      }
    </script>
}